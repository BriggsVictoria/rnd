---
  {% comment %}{{ form_builder | json }}{% endcomment %}
<form class="navbar-form navbar-right" enctype="multipart/form-data" action="{{form_builder.action}}" accept-charset="UTF-8" method="{{form_builder.method}}">
  <input name="utf8" type="hidden" value="âœ“">
  <input type="hidden" name="authenticity_token" value="{{form_builder.system_fields.authenticity_token}}">
  <input type="hidden" name="form_configuration_id" value="6621">
<input type="hidden" name="page_id" value="8721">
<input type="hidden" name="slug2">
<input type="hidden" name="slug3">
<input type="hidden" name="resource_id" value="{{form.builder.system_fields.resource_id}}">
<input type="hidden" name="parent_resource_id">
<input type="hidden" name="parent_resource_class">


<div class="form-group">
  <label for="email">Email</label>
  <input name="{{ form_builder.fields.email.name }}" value="{{ form_builder.fields.email.value }}" id="email" type="email" class="form-control" placeholder="Username">
  </div>

<div class="form-group">
  <label for="password">Password</label>
  <input name="{{ form_builder.fields.password.name }}" id="password" type="password" class="form-control" placeholder="Password">
  </div>


  {% if form_builder.errors.password %}
    <p>{{ form_builder.errors.password }}</p>
  {% endif %}

  <button type="submit" class="btn btn-default">Log In</button>
</form>

